# ===========================================
# PROJECT CONFIGURATION - MOBILE APP
# ===========================================
PROJECT_NAME=mobile-app-payments
PROJECT_DESCRIPTION=Mobile App In-App Purchase Processing
DOCUMENTATION_URL=https://docs.yourmobileapp.com/payments
SUPPORT_EMAIL=support@yourmobileapp.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=https://api.yourmobileapp.com

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX=500
CALLBACK_RATE_LIMIT_MAX=200

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
TRANSACTIONS_COLLECTION=appPurchases
LOGS_COLLECTION=purchaseLogs
ENABLE_CALLBACK_LOGGING=true

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
FIREBASE_ADMIN_SERVICE_ACCOUNT_BASE64=your-mobile-app-firebase-service-account-base64

# ===========================================
# M-PESA CONFIGURATION
# ===========================================
MPESA_CONSUMER_KEY=your-mobile-app-consumer-key
MPESA_CONSUMER_SECRET=your-mobile-app-consumer-secret
MPESA_PASSKEY=your-mobile-app-passkey
MPESA_SHORTCODE=your-mobile-app-shortcode
MPESA_ENVIRONMENT=production

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
CALLBACK_URL=https://payments.yourmobileapp.com/api/mpesa/callback