# ===========================================
# PROJECT CONFIGURATION - SAAS PLATFORM
# ===========================================
PROJECT_NAME=saas-subscription-payments
PROJECT_DESCRIPTION=SaaS Platform Subscription Payment Processing
DOCUMENTATION_URL=https://docs.yourplatform.com/billing
SUPPORT_EMAIL=billing@yourplatform.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=production
LOG_LEVEL=warn

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=https://yourplatform.com,https://app.yourplatform.com

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX=150
CALLBACK_RATE_LIMIT_MAX=80

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
TRANSACTIONS_COLLECTION=subscriptionPayments
LOGS_COLLECTION=billingLogs
ENABLE_CALLBACK_LOGGING=true

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
FIREBASE_ADMIN_SERVICE_ACCOUNT_BASE64=your-saas-firebase-service-account-base64

# ===========================================
# M-PESA CONFIGURATION
# ===========================================
MPESA_CONSUMER_KEY=your-saas-consumer-key
MPESA_CONSUMER_SECRET=your-saas-consumer-secret
MPESA_PASSKEY=your-saas-passkey
MPESA_SHORTCODE=your-saas-shortcode
MPESA_ENVIRONMENT=production

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
CALLBACK_URL=https://billing.yourplatform.com/api/mpesa/callback