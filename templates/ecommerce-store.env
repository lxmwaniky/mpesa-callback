# ===========================================
# PROJECT CONFIGURATION - E-COMMERCE STORE
# ===========================================
PROJECT_NAME=ecommerce-mpesa-callback
PROJECT_DESCRIPTION=E-commerce Store M-Pesa Payment Processing
DOCUMENTATION_URL=https://docs.yourstore.com/payments
SUPPORT_EMAIL=payments@yourstore.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=https://yourstore.com,https://admin.yourstore.com

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200
CALLBACK_RATE_LIMIT_MAX=100

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
TRANSACTIONS_COLLECTION=storePayments
LOGS_COLLECTION=paymentLogs
ENABLE_CALLBACK_LOGGING=true

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
FIREBASE_ADMIN_SERVICE_ACCOUNT_BASE64=your-store-firebase-service-account-base64

# ===========================================
# M-PESA CONFIGURATION
# ===========================================
MPESA_CONSUMER_KEY=your-store-consumer-key
MPESA_CONSUMER_SECRET=your-store-consumer-secret
MPESA_PASSKEY=your-store-passkey
MPESA_SHORTCODE=your-store-shortcode
MPESA_ENVIRONMENT=production

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
CALLBACK_URL=https://payments.yourstore.com/api/mpesa/callback